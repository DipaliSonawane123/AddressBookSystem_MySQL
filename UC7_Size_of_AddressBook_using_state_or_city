#UC 2 Ability to create a Address Book Table with first and last names, address, city,

state, zip, phone number and email as its attributes

 CREATE TABLE Address_Book1
    -> (
    ->  first_name varchar(255) not null,
    ->      last_name varchar(255) not null,
    ->     address varchar(255) not null,
    ->      city varchar(100) not null,
    ->      state varchar(100) not null,
    ->      zip int not null,
    ->      phone_number varchar(255) not null,
    ->      email varchar(255));
Query OK, 0 rows affected (0.67 sec)


 describe Address_Book1;
+--------------+--------------+------+-----+---------+-------+
| Field        | Type         | Null | Key | Default | Extra |
+--------------+--------------+------+-----+---------+-------+
| first_name   | varchar(255) | NO   |     | NULL    |       |
| last_name    | varchar(255) | NO   |     | NULL    |       |
| address      | varchar(255) | NO   |     | NULL    |       |
| city         | varchar(100) | NO   |     | NULL    |       |
| state        | varchar(100) | NO   |     | NULL    |       |
| zip          | int          | NO   |     | NULL    |       |
| phone_number | varchar(255) | NO   |     | NULL    |       |
| email        | varchar(255) | YES  |     | NULL    |       |
+--------------+--------------+------+-----+---------+-------+
8 rows in set (0.00 sec)

#UC 3 Ability to insert new Contacts to Address Book

insert into Address_Book1 (first_name, last_name, address, city, state, zip,phone_number,email) values
    ->('Dipali', 'Sonawane', 'pink towers', 'Jalgaon', 'Maharashtra', 425001, '9066375678', 'dips123@gmail.com'),
